<!-- views/students/show.ejs -->

<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div>
      <h2>Show</h2>
      <div>
        <h3><%= student.name%></h3>
        <label>Number</label><span><%= student.number %></span>
        <br>
        <label>Major</label><span><%= student.major %></span>
        <br>
        <label>Email</label><span><%= student.email %></span>
        <br>
        <label>Mac Address</label><span><%= student.mac %></span>
      </div>
      <div>
        <a href="/students/<%= student._id %>/edit">Edit</a> 
        <form action="/students/<%= student._id %>?_method=delete" method="post"> <!-- 2 -->
          <a href="#" onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;">Delete</a>
        </form>
      </div>
    </div>
  </body>
</html>